@model IEnumerable<ClientsViewModel>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Usuários</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 200px; float:left; margin-right:10px;">
                        <button type="button" class="btn btn-primary col start AddClient">
                            <i class="fas fa-plus"></i>
                            <span>Adicionar Usuários</span>
                        </button>
                    </div>
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table text-nowrap">
                    <thead>
                        <tr>
                        
                            
                            <th>@Html.DisplayNameFor(model => model.ClientId)</th>
                            <th>@Html.DisplayNameFor(model => model.ClientName)</th>
                            <th></th>
                            
                        
                        </tr>
                    </thead>
                    <tbody>
                          @foreach (var clients in Model)
                        {
                            <tr>
                            
                                <td>@clients.ClientId</td>
                                <td>@clients.ClientName</td>
                                
                                <td>
                                <div class="input-group-prepend">
                                        <div class="dropdown">
                                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                                                   Ação
                                            </button>
                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                                <li><button class="dropdown-item" type="button"><i class="fas fa-edit"></i>
                                            Editar</button></li>
                                                <li><button class="dropdown-item" type="button"><i class="fa fa-trash "></i>
                                            Excluir</button></li>
                                               
                                            </ul>
                                        </div>
                                </div>
                                </td>
                                </tr>
                                }
                            
                        
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                </ul>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>