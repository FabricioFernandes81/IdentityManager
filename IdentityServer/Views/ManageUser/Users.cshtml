@model IEnumerable<IdentityServer.Models.UsersViewModel>
<div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Usuários</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 200px; float:left; margin-right:10px;">
                        <button type="submit" class="btn btn-primary col start">
                            <i class="fas fa-plus"></i>
                            <span>Adicionar Usuários</span>
                        </button></div>
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                     <th> @Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Nome)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Permisoes)</th>
                            <th>@Html.DisplayNameFor(model => model.Celular)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                      <th></th>
                      
                    </tr>
                  </thead>
                  <tbody>
                        @foreach(var users in Model){
                    <tr>
                      
                      <td> @Html.DisplayFor(modelItem => users.Id)</td>
                                <td>@Html.DisplayFor(modelItem => users.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => users.Email)</td>
                                <td>@Html.DisplayFor(modelItem => users.Permisoes)</td>
                                <td>@Html.DisplayFor(modelItem => users.Celular)</td>
                                <td>@if(users.Status==true){
                                        @Html.Label("Ativo")
                                    }else
                                    {
                                        @Html.Label("Bloqueado")
                                    }
                                </td>
                                <td>
                                <div class="input-group-prepend">
                                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        Ação
                                        </button> 
                                        <div class="dropdown-menu" style="">
                                        
                                                @if (users.Status == true)
                                                {
                                                <a class="dropdown-item" asp-controller="ManageUser" asp-action="LockUser" asp-route-id="@users.Id">
                                                    <i class="fa fa-lock"></i>
                                                    @Html.Label("Bloquear")
                                                </a>
                                                  }else{
                                                <a class="dropdown-item" asp-controller="ManageUser" asp-action="UnlockUser" asp-route-id="@users.Id">
                                                    <i class="fa fa-unlock"></i>
                                                    @Html.Label("Desbloquear")</a>
                                                }
                                            
                                        <div class="dropdown-divider"></div>

                                            <a class="dropdown-item EditUser" data-toggle="modal" data-target="#modal-info" data-id="@users.Id">
                                                <i class="fas fa-edit"></i>
                                             Editar</a>
                                           
                                        <div class="dropdown-divider"></div>
                                        
                                        <a class="dropdown-item" href="#">
                                                <i class="fa fa-trash"></i>
                                             Excluir</a>

                                    </div>
                                </div>
                            </td>
                        
                    </tr>
                    }
                  </tbody>
                </table>
              </div>
               <div class="card-footer clearfix">
                <ul class="pagination pagination-sm m-0 float-right">
                  <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                </ul>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
