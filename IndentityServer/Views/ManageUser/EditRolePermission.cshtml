@model List<IdentityServer.Models.MenuViewModel>

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-action="EditRolePermission">
            <div class="modal-header">
                <h2>Permissão</h2>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>

            </div>
            <div class="modal-body">
                <div class="treeview-1 w-20">
                    <input name="id" type="hidden" value="@TempData["id"]" />

                    <div class="tree_main">
                       <ul id="bs_main" class="main_ul">
                         @for (var i = 0; i < Model.Count; i++)
                            {
                                
                                <li>
                                    <input type="checkbox" asp-for="@Model[i].Permitted" />
                                    <label style="margin-left:10px;" asp-for="@Model[i].Permitted">@Model[i].Name</label>
                                    <input type="hidden" asp-for="@Model[i].Id" />
                                    <input type="hidden" asp-for="@Model[i].Name" />
                                </li>
                            

                            }
                             
                            </ul> 
                     
                    </div>
                          
                    
                </div>
             
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" data-dismiss="modal" aria-label="Close" class="btn btn-primary">Cancelar</button>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
    
</div>